<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shineyue.cn.mapper.TeamMapper">

    <resultMap id="teamMap" type="com.shineyue.cn.model.Team">
        <id property="g_id" column="s_id"/>
        <result property="g_name" column="s_name"/>

        <collection property="list" ofType="com.shineyue.cn.model.Student" column="g_team">
            <id property="id" column="g_id"/>
            <result property="name" column="g_name"/>
            <result property="age" column="g_age"/>
            <result property="sex" column="g_sex"/>
        </collection>
    </resultMap>

    <select id="biglist" resultMap="teamMap">
          select t.*,s.* from t_team t  inner join  t_student s  on  s.g_team_id=t.s_id;
    </select>

</mapper>